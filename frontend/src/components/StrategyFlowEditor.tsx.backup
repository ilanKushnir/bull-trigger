  messageTemplate: string;
  includeApiData: boolean;
  onlyIfVariable?: string;
  messageType: 'info' | 'success' | 'warning' | 'error';
  parseMode?: 'Markdown' | 'HTML' | 'none';
  orderIndex: number;
  enabled: boolean;
}

