{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@bull-trigger/common/*": ["packages/common/src/*"],
      "@bull-trigger/common": ["packages/common/src/index.ts"]
    },
    "types": ["node"]
  }
} 